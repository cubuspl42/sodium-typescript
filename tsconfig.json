{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "noImplicitAny": false,
    //would be nice to enable this...
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist/",
    "declarationDir": "dist/typings",
    "moduleResolution": "node",
    "diagnostics": true,
    "lib": [
      "es6",
      "es5",
      "dom"
    ]
  },
  "files": [
    "./src/lib/Lib.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ]
}
